#!/usr/bin/env bash
#Author: linux-gaming.ru
#steam.exe
#Rating=5
################################################
if [ "${update_loc}" = "RUS" ] ; then
    export PW_COMMENT_DB="Если у вас моргает интерфейс отключите в настройках Steam всё что связано с аппаратным ускорением или декодированием"
fi
if [ "${update_loc}" = "ENG" ] ; then
    export PW_COMMENT_DB="If you have a blinking interface, disable anything related to hardware acceleration or decoding in Steam settings"
fi
export PW_WINDOWS_VER="10"
export PW_DLL_INSTALL="vcrun2022 d3dcompiler_46 physx"
export WINEDLLOVERRIDES="OnlineFix64=n;SteamOverlay64=n;winmm=n,b;dnet=n;steam_api64=n"
export LAUNCH_PARAMETERS="-gamepadui -fullscreen -no-dwrite"
export PW_PREFIX_NAME="STEAM"

add_in_start_portwine () {
    echo "Disabled silent autostart steam."
    if [[ -f "${PORT_WINE_PATH}/data/prefixes/${PW_PREFIX_NAME}/user.reg" ]] ; then
        sed -i '/steam.exe\\" -silent"/d' "${PORT_WINE_PATH}/data/prefixes/${PW_PREFIX_NAME}/user.reg"
    fi
}
