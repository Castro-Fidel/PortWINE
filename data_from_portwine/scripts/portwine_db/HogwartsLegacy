add_in_start_portwine () {
    if [ "${update_loc}" = "RUS" ] ; then
        sed -i "s/Language=english/Language=russian/g" "${PATH_TO_GAME}/Engine/Binaries/ThirdParty/Steamworks/Steamv154/Win64/steam_api64.ini"
    fi
}
